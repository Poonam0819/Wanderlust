<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br/>
    <h2>Create Listing : </h2>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" 
                   placeholder="Add a catchy Title" 
                   type="text" 
                   class="form-control"
                   required
            />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">
                Title should be valid.
              </div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea  name="listing[description]" 
                       type="text"
                       class="form-control"
                       required
            ></textarea>
            <div class="invalid-feedback">
                Please enter a short description.
              </div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input name="listing[image]" 
                   placeholder="Enter your imageâ€™s URL (e.g., from Dropbox, Google Photos)" 
                   type="text" 
                   class="form-control"
            />
        </div>
        <div class="mb-3">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" 
                   placeholder="Enter your best offer!" 
                   type="number" 
                   class="form-control"
                   required
            />
            <div class="invalid-feedback">
                Price should be valid.
              </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" 
                       placeholder="Your current coordinates?" 
                       type="text"
                       class="form-control"
                       required
                />
                <div class="invalid-feedback">
                   Location should be valid.
                  </div>
            </div>
            <div class="mb-3 col-md-6">
                <lable for="country" class="form-label">Country</lable>
                <input name="listing[country]" 
                       placeholder="Country of residence" 
                       type="text"
                       class="form-control"
                       required
                />
                <div class="invalid-feedback">
                    Country name should be valid.
                  </div>
            </div>
        </div>
        
        <br/>
        <button class="btn btn-dark add-btn" >Add</button>
    </form>
    <br/>
  </div>
</div>